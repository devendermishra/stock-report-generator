# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration
DEFAULT_MODEL=gpt-4o-mini
MAX_TOKENS=4000
TEMPERATURE=0.1

# MCP Configuration
MCP_CONTEXT_SIZE=10000

# File Paths
OUTPUT_DIR=reports
TEMP_DIR=temp

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_DELAY=1.0

# API Rate Limiting
# Number of API requests allowed per minute per IP address (default: 2)
API_RATE_LIMIT_PER_MINUTE=2

# Circuit Breaker Configuration
# Number of failures required to open the circuit (default: 3)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
# Time window in seconds to track failures (default: 120 = 2 minutes)
CIRCUIT_BREAKER_TIME_WINDOW_SECONDS=120
# Recovery timeout in seconds before attempting to close the circuit (default: 60 = 1 minute)
CIRCUIT_BREAKER_RECOVERY_TIMEOUT_SECONDS=60

# Metrics Configuration (Prometheus)
# Set ENABLE_METRICS=true to enable Prometheus metrics collection
ENABLE_METRICS=false
METRICS_PORT=8000
